|number = RAND 1 TO 1000
|flag = 1

WHILE |flag == 1 THEN
	NPRINT
	INPUT "The number that you have to guess is between 1 and 1000. Input your guess : " |numberGuess
	NPRINT
	IF |number == |numberGuess THEN
		|flag = 0
